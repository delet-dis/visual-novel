<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SceneActivity">

  <ImageView
      android:id="@+id/backgroundImage"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:contentDescription="@string/backgroundImageDescription"
      android:scaleType="fitXY"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/starting_background" />

  <ImageView
      android:id="@+id/backgroundImageCat"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginEnd="110dp"
      android:contentDescription="@string/backgroundImageDescription"
      android:scaleType="fitXY"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/backgroundImage"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/starting_orange_cat" />

  <TextView
      android:id="@+id/textHeader"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="370dp"
      android:background="@color/primaryColor"
      android:paddingStart="16dp"
      android:paddingTop="11dp"
      android:paddingEnd="16dp"
      android:paddingBottom="11dp"
      android:text="@string/catWelcomeTextNamed"
      android:textAlignment="center"
      android:textColor="@color/fontColor"
      android:textSize="17sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/playerName"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginBottom="80dp"
      android:background="#FFFFFF"
      android:ems="10"
      android:hint="@string/enterNameHint"
      android:importantForAutofill="no"
      android:includeFontPadding="true"
      android:inputType="textPersonName"
      android:paddingStart="16dp"
      android:paddingEnd="0dp"
      android:textColor="@android:color/black"
      android:textColorHint="#FFFFFF"
      android:textStyle="italic"
      app:layout_constraintBottom_toTopOf="@+id/setPlayerName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/setPlayerName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="57dp"
      android:text="@string/startButton"
      android:textAlignment="center"
      android:textAllCaps="false"
      android:textColor="@color/fontColor"
      android:textSize="17sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>